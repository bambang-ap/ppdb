{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@server": [
        "./server"
      ],
      "@components": [
        "./components"
      ],
      "@appComponent": [
        "./components/App"
      ],
      "@constants": [
        "./constants"
      ],
      "@hooks": [
        "./hooks"
      ],
      "@helpers": [
        "./helpers"
      ],
      "@type": [
        "./types"
      ],
      "@atoms": [
        "./recoil/atoms"
      ],
      "@selectors": [
        "./recoil/selectors"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@utils": [
        "./utils"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}